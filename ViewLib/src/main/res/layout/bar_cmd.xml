<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:clickable="true"
        android:src="@drawable/btn_back" />

    <ImageView
        android:id="@+id/btn_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/btn_back"
        android:layout_margin="2dp"
	    android:clickable="true"
        android:src="@drawable/btn_view" />

    <ImageView
        android:id="@+id/btn_tools"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_view"
        android:clickable="true"
        android:src="@drawable/btn_outline" />

    <ImageView
        android:id="@+id/btn_annot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_tools"
        android:clickable="true"
        android:src="@drawable/btn_annots" />

    <ImageView
        android:id="@+id/btn_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:src="@drawable/btn_more" />

</RelativeLayout>