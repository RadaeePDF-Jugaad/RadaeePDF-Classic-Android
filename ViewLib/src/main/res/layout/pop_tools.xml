<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/actual_content"
        android:layout_alignTop="@+id/actual_content"
        android:layout_alignRight="@+id/actual_content"
        android:layout_alignBottom="@+id/actual_content"
        android:background="@drawable/bg_menu"/>

    <LinearLayout
        android:id="@+id/actual_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp" >

        <LinearLayout
            android:id="@+id/view_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/img_meta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_meta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Meta" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_outlines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/img_outline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_outline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Outlines" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Search" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/img_select"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Text Selection" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_undo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >
            <ImageView
                android:id="@+id/img_undo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_undo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Undo" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_redo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >
            <ImageView
                android:id="@+id/img_redo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_redo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Redo" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>